extends ../base


block content
    main.main
        .user-view__form-container
          h2.heading-secondary.ma-bt-md Edit the tour
          form.form.form-user-data(method='POST', action=`/admin/edit-tour/${tour.slug}?_method=PATCH`, enctype='multipart/form-data')

            .form__group
              label.form__label(for='name') Tour name
              input.form__input(type='text', value=`${tour.name}`, required, name='name')

            .form__group.ma-bt-md
              label.form__label Destination
              input.form__input(type='text', value=`${tour.destination}`, required, name='destination')    

            .form__group.ma-bt-md
              label.form__label Duration
              input.form__input(type='number', value=`${tour.duration}`, required, name='duration')

            .form__group.ma-bt-md
              label.form__label Max group size
              input.form__input(type='number', value=`${tour.maxGroupSize}`, required, name='maxGroupSize')

            .form__group.ma-bt-md
              label.form__label Difficulty
              input.form__input(type='text', value=`${tour.difficulty}`, required, name='difficulty')

            .form__group.ma-bt-md
              label.form__label Ratings Average
              input.form__input(type='text', value=`${tour.ratingsAverage}`, required, name='ratingsAverage')

            .form__group.ma-bt-md
              label.form__label Ratings Quantity
              input.form__input(type='text', value=`${tour.ratingsQuantity}`, required, name='ratingsQuantity')

            .form__group.ma-bt-md
              label.form__label Price
              input.form__input(type='text', value=`${tour.price}`, required, name='price')    

            .form__group.ma-bt-md
              label.form__label Description
              textarea(cols='68', rows='15', type='text', required, name='description') #{tour.description}

            .form__group.ma-bt-md
              img.tour-imageCover-photo(src=`/img/tours/${tour.imageCover}`)  
            .form__group.ma-bt-md  
              img.tour-detail-photo(src=`/img/tours/${tour.images[0]}`)  
              img.tour-detail-photo(src=`/img/tours/${tour.images[1]}`)  
              img.tour-detail-photo(src=`/img/tours/${tour.images[2]}`)          

            .form__group.form__photo-upload
              input.form__upload(type='file',multiple='', accept='image/*',id='photo', name='images')
              label(for='photo') Choose 4 images( first image is image cover)
          
            .form__group.right
              button.btn.btn--small.btn--green Save 

        .line &nbsp;

