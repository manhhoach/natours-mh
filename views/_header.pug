header.header
    nav.nav.nav--tours
        a.nav__el(href='/') Home
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    form.form
        input.search.form__input(type='text', placeholder='Search the tour' name='q')
    nav.nav.nav--user
        if user           
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt='Photo')
                span= user.name
            a.nav__el.nav__el--logout(href='/logout') Log out    
        else
            a.nav__el(href='/login') Login     
            a.nav__el.nav__el-cta(href='/signup') Sign up 